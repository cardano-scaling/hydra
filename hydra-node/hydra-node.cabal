  type:               exitcode-stdio-1.0
  build-depends:
    , aeson
    , base
    , bytestring
    , cardano-api:gen
    , cardano-binary
    , cardano-crypto-class
    , cardano-ledger-alonzo
    , cardano-ledger-api
    , cardano-ledger-babbage
    , cardano-ledger-babbage:testlib
    , cardano-ledger-conway
    , cardano-ledger-core
    , cardano-ledger-shelley
    , cardano-ledger-shelley:testlib
    , cardano-slotting
