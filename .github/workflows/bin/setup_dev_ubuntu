#!/usr/bin/env bash

set -euo pipefail

set -x

# Install netbase to work around https://github.com/input-output-hk/cardano-node/issues/2752
sudo apt-get install -y netbase
# Install ghcup dependencies
sudo apt-get install -y --no-install-recommends \
    curl \
    libnuma-dev \
    zlib1g-dev \
    libgmp-dev \
    libgmp10 \
    git \
    wget \
    lsb-release \
    software-properties-common \
    gnupg2 \
    apt-transport-https \
    gcc \
    autoconf \
    automake \
    build-essential

# TODO install cardano-node
# ADD cardano-node.tar.gz /srv/cardano

# Install ghc and cabal
ghcup install ghc 8.10.7
ghcup set ghc 8.10.7

# Install cardano-node dependencies see https://developers.cardano.org/docs/get-started/installing-cardano-node/#linux
sudo apt-get install -y \
  automake \
  build-essential \
  pkg-config \
  libffi-dev \
  libgmp-dev \
  libssl-dev \
  libtinfo-dev \
  libsystemd-dev \
  zlib1g-dev \
  make \
  g++ \
  tmux \
  git \
  jq \
  wget \
  libncursesw5 \
  libtool \
  autoconf

mkdir -p src
mkdir -p srv/bin
# Install libsodium
(
  cd src
  git clone https://github.com/input-output-hk/libsodium
  cd libsodium
  git checkout 66f017f1
  ./autogen.sh
  ./configure --prefix="$(realpath $PWD/../../srv)"
  make
  make install
)

# Install secp256k1
(
  cd src
  git clone https://github.com/bitcoin-core/secp256k1
  cd secp256k1
  git checkout ac83be33
  ./autogen.sh
  ./configure --enable-module-schnorrsig --enable-experimental --prefix="$(realpath $PWD/../../srv)"
  make
  make install
)

# Install cardano
(
  cd src
  curl https://update-cardano-mainnet.iohk.io/cardano-node-releases/cardano-node-1.35.7-linux.tar.gz -o cardano-node.tar.gz
  cd ../srv/bin
  tar xfz ../../src/cardano-node.tar.gz
)

cat <<EOF
# Setup the following environment varialbles:
LD_LIBRARY_PATH="$(realpath $PWD/srv)/lib:${LD_LIBRARY_PATH}"
PKG_CONFIG_PATH="$(realpath $PWD/srv)/lib/pkgconfig:${PKG_CONFIG_PATH}"
PATH="$(realpath $PWD/srv)/bin:${PATH}
EOF
